################################################
#
# SYSCALL_Pointer_common
#
################################################
PK_SYS_SYSCALL_POINTER_NAME        := SYSCALL_Pointer_common
PK_SYS_SYSCALL_POINTER_VERSION     := $(CONFIG_PK_SYS_SYSCALL_POINTER_VERSION)
PK_SYS_SYSCALL_POINTER_SITE        := $(CONFIG_PK_SYS_SYSCALL_POINTER_URL)
PK_SYS_SYSCALL_POINTER_GITHUB      := $(CONFIG_PK_SYS_SYSCALL_POINTER_GITHUB)
PK_SYS_SYSCALL_POINTER_SUBNAME     :=
PK_SYS_SYSCALL_POINTER_BUILDARCH   := $(CONFIG_PK_SYS_SYSCALL_POINTER_BUILDARCH)
PK_SYS_SYSCALL_POINTER_DIR         := $(srctree)/package/syscall/sys_hello_BiscuitOS/SYSCALL_Pointer_common
PK_SYS_SYSCALL_POINTER_PATCH       := $(PK_SYS_SYSCALL_POINTER_DIR)/patch
PK_SYS_SYSCALL_POINTER_BSBIT       := SYSCALL_Pointer_common-$(PK_SYS_SYSCALL_POINTER_VERSION).bsbit
PK_SYS_SYSCALL_POINTER_OUT         :=
PK_SYS_SYSCALL_POINTER_SCRIPTS     := $(srctree)/scripts/package/package-app.sh
PK_SYS_SYSCALL_POINTER_TAR         := $(CONFIG_PK_SYS_SYSCALL_POINTER_TAR)
PK_SYS_SYSCALL_POINTER_PACKAGE     :=
PK_SYS_SYSCALL_POINTER_CONFIG      := $(CONFIG_PK_SYS_SYSCALL_POINTER_CONFIG)
SUB_TARGET                  += $(PK_SYS_SYSCALL_POINTER_DIR)/build

PK_SYS_SYSCALL_POINTER_sh = $(CONFIG_SHELL) $(PK_SYS_SYSCALL_POINTER_SCRIPTS) \
                 $1X \
                 $(PK_SYS_SYSCALL_POINTER_NAME)X \
                 $(PK_SYS_SYSCALL_POINTER_VERSION)X \
                 $(PK_SYS_SYSCALL_POINTER_SITE)X \
                 $(PK_SYS_SYSCALL_POINTER_GITHUB)X \
                 $(PK_SYS_SYSCALL_POINTER_PATCH)X \
                 $(CONFIG_LINUX_KERNEL_VERSION)X \
	         $(CONFIG_MAIN_PROJ_NAME)X \
                 $(PK_SYS_SYSCALL_POINTER_TAR)X \
                 $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X \
                 $(PK_SYS_SYSCALL_POINTER_SUBNAME)X \
                 $(CONFIG_PK_SYS_SYSCALL_POINTER_CONFIG)X \
                 $(CONFIG_PK_SYS_SYSCALL_POINTER_LIBPATH)X \
                 $(CONFIG_PK_SYS_SYSCALL_POINTER_CPPFLAGS)X \
                 $(CONFIG_PK_SYS_SYSCALL_POINTER_DPKCONFIG)X \
                 $(CONFIG_PK_SYS_SYSCALL_POINTER_CFLAGS)X \
                 $(CONFIG_PK_SYS_SYSCALL_POINTER_LDFLAGS)X \
                 $(CONFIG_PK_SYS_SYSCALL_POINTER_CXXFLAGS)X \
                 $(CONFIG_PK_SYS_SYSCALL_POINTER_ASFLAGS)X \
                 $(PK_SYS_SYSCALL_POINTER_BSBIT)X \
                 $(PK_SYS_SYSCALL_POINTER_BUILDARCH)X \
		 $(PK_SYS_SYSCALL_POINTER_CSRCFILE)X \
                 $(CONFIG_PK_SYS_SYSCALL_POINTER_SRCFILE)X \
                 $(CONFIG_PK_SYS_SYSCALL_POINTER_CSRCFILE)

$(PK_SYS_SYSCALL_POINTER_DIR)/build: FORCE
	$(Q)$(call PK_SYS_SYSCALL_POINTER_sh,$(srctree))
