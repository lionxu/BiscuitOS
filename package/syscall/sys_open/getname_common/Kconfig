menuconfig PK_SYS_OPEN_GETNAME
	bool "getname(): Max open file name"
	select PK_STRACE

if PK_SYS_OPEN_GETNAME

config PK_SYS_OPEN_GETNAME_VERSION
	default "0.0.1"
	string "verstion"

config PK_SYS_OPEN_GETNAME_TAR
	default "tar.gz"
	string "tar type"

config PK_SYS_OPEN_GETNAME_URL
	default "https://gitee.com/BiscuitOS_team/HardStack/raw/Gitee/SystemCall/sys_open/getname_common"
	string "url"

config PK_SYS_OPEN_GETNAME_GITHUB
	string "GitHub"

config PK_SYS_OPEN_GETNAME_SRCFILE
	default "main.c Makefile"
	string "Source code list"

config PK_SYS_OPEN_GETNAME_CSRCFILE
	string "Compile source code list"

config PK_SYS_OPEN_GETNAME_CONFIG
	string "CONFIG: Project Configure Options"

config PK_SYS_OPEN_GETNAME_LIBPATH
	string "LIBS: Libraries to pass to the linker, e.g. -l<library>"

config PK_SYS_OPEN_GETNAME_CPPFLAGS
	string "CPPFLAGS: C/C++ preprocessor flags, e.g. -I<include dir>"

config PK_SYS_OPEN_GETNAME_DPKCONFIG
	string "PKG_CONFIG_PATH: Directories to add to pkg-config's search path"

config PK_SYS_OPEN_GETNAME_CFLAGS
	string "CFLAGS: C compiler flags"

config PK_SYS_OPEN_GETNAME_LDFLAGS
	string "LDFLAGS: Linker flags"

config PK_SYS_OPEN_GETNAME_CXXFLAGS
	string "CXXFLAGS: C++ compiler flags"

config PK_SYS_OPEN_GETNAME_ASFLAGS
	string "CCASFLAGS: assembler compiler flags (defaults to CFLAGS)"

config PK_SYS_OPEN_GETNAME_BUILDARCH
	string "--host options on configure for Architecture"

endif # PK_SYS_OPEN_GETNAME
